{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2017", "es7", "es6", "dom"],
    "outDir": "dist",
    "typeRoots": ["types"],
    "types": ["node", "mocha"],
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "Node"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./src/*.ts"
  ]
}